<h2>Rating statistics</h2>

<div class="row">
  <div class="col-md-4">
    <h3>Best beers</h3>
    <%= render 'list', elements: @best_beers %>
  </div>
  <div class="col-md-4">
    <h3>Best breweries</h3>
    <%= render 'list', elements: @best_breweries %>
  </div>
  <div class="col-md-4">
    <h3>Best styles</h3>
    <%= render 'list', elements: @best_styles %>
  </div>
</div>

<h3>Most active users</h3>
  <table class="table table-hover">
    <thead>
    <tr>
      <th></th>
      <th>favorite beer</th>
      <th>prefered style</th>
      <th>favorite brewery</th>
      <th>ratings</th>
    </tr>
    </thead>

    <tbody>
    <% @top_raters.each do |rater| %>
      <% if rater.ratings.count > 0 %>
      <tr>
        <td><%= link_to rater.username, rater %></td>
        <td><%= rater.favorite_beer %></td>
        <td><%= rater.favorite_style %></td>
        <% if rater.favorite_brewery %>
          <td><%= rater.favorite_brewery.name %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= rater.ratings.count %></td>
      </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>

<h3>Recent ratings<h3>
<ul>
 <% @recent_ratings.each do |rating| %>
   <li> <%= rating %> <%= link_to rating.user.username, rating.user %> </li>
 <% end %>
</ul>


<% if current_user %>
  <%= link_to 'New rating', new_rating_path, class:'btn btn-default' %>
<% end %>
