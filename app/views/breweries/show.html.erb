<p id="notice"><%= notice %></p>

<h2>
  <strong><%= @brewery.name %></strong>
  <% if not @brewery.active %>
      <span class="label label-info">retired</span>
  <% end %>
</h2>

<p>
  <i>Established in <%= @brewery.year %></i>
</p>

<p>Number of beers <%= @brewery.beers.count %></p>

<p>
 <% @brewery.beers.each do |beer| %>
   <%= link_to beer.name, beer %>
 <% end %>
</p>

<p>
  <% if @brewery.ratings.empty? %>
  Has no rated beers yet
  <% else %>
    Has <%= pluralize @brewery.ratings.count, 'rating' %>, average <%= @brewery.average_rating %>
  <% end %>
</p>

<%= link_to 'Edit', edit_brewery_path(@brewery), class:'btn btn-warning' if current_user %>
<%= link_to 'Destroy', @brewery, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } if current_user %>

